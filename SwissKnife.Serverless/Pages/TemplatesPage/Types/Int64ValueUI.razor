@using Blazorise
@using Classeur.Core.CustomizableStructure

@implements IValueUI

<Label For="@_textEdit?.ElementId">@Field.Label</Label>
<TextEdit @ref="_textEdit" Text="@(((long)Value).ToString())" TextChanged="OnTextChangedAsync" />

@code {

    private TextEdit? _textEdit;
    private long _value = Int64FieldType.Defaults.Default;

    [Parameter]
    public FieldDescription Field { get; set; }

    [Parameter]
    public object Value { get; set; } = null!;

    [Parameter]
    public EventCallback Changing { get; set; }

    public object GetValue() => _value;

    protected override void OnInitialized() => _value = (long)Value;

    private async Task OnTextChangedAsync(string text)
    {
        _value = Field.Type.TryParse(text, out object? parsed)
            ? (long)parsed
            : Int64FieldType.Defaults.Default;

        await Changing.InvokeAsync();
    }

}
