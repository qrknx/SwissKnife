@using Blazorise
@using Classeur.Core.CustomizableStructure
@using System.Diagnostics.CodeAnalysis

@implements IValueUI

<Label For="@_textEdit?.ElementId">@Field.Label</Label>
<TextEdit @ref="_textEdit" Text="@_text" TextChanged="OnTextChangedAsync" Border="_border" />

@code {

    private TextEdit? _textEdit;
    private IFluentBorder _border = Border.Success;
    private string _text = Int64FieldType.Defaults.Default.ToString();

    [Parameter]
    public FieldDescription Field { get; set; }

    [Parameter]
    public object Value { private get; set; } = null!;

    [Parameter]
    public EventCallback Changing { get; set; }

    public bool TryGetValue([NotNullWhen(returnValue: true)]out object? value)
    {
        if (long.TryParse(_text, out long i) && Field.Type.TryParse(i, out object? parsed))
        {
            value = (long)parsed;
            return true;
        }

        value = null;
        return false;
    }

    protected override void OnInitialized()
    {
        _text = ((long)Value).ToString();
        UpdateValidation();
    }

    private async Task OnTextChangedAsync(string text)
    {
        _text = text;

        UpdateValidation();

        await Changing.InvokeAsync();
    }

    private void UpdateValidation() => _border = long.TryParse(_text, out long i)
                                                 && Field.Type.TryParse(i, out _)
        ? Border.Success
        : Border.Warning;

}
